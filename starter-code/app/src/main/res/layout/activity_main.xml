<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="generalassembly.yuliyakaleda.startercode.MainActivity">

    <!-- TODO: add edit text, button, text view and a view group-->
    
    <EditText
        android:id="@+id/wishedittext"
        android:hint="Add a wish to your wishlist!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/wishbutton"
        android:text="Add a wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wishtextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="16dp"/>

    <ListView
        android:id="@+id/wishlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
